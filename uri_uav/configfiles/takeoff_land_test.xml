<?xml version="1.0" ?>
<robot name="UAV" >

	<resource name="uri_uav::IrisInterface" number="4"/>
	<resource name="uri_base::SharedMemory<uri_base::Trajectory>"/>

	<task name="uri_uav::Takeoff" period="0.1" period_tollerance="0.002" takeoff_height="1.5" takeoff_height_tollerance="0.05" />
	<task name="uri_uav::Hover" period="0.05" period_tollerance="0.002" Countdown="3.0" GoalSource="trajectory" YawRate="0.0" />
	<task name="uri_uav::Land" period="0.1" period_tollerance="0.002" />
	<task name="uri_uav::GotoTask" period="0.05" period_tollerance="0.002" />
	<task name="uri_uav::AttitudeThrustController" period="0.01" period_tollerance="0.002" save_data="false" savefile_name="/home/paolos/savefile.txt" />
	
	<behavior name="Takeoff" tasklist="uri_uav::Takeoff"/>
	<behavior name="Hover" tasklist="uri_uav::Hover uri_uav::AttitudeThrustController"/>
	<behavior name="Goto" tasklist="uri_uav::GotoTask uri_uav::AttitudeThrustController"/>
	<behavior name="Land" tasklist="uri_uav::Land"/>
	
	<behavior_controller name="uri_uav::TakeoffLandTest" period="0.01" period_tollerance="0.001" />
	
</robot>


